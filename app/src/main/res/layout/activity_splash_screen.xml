<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FF3333"
    tools:context="com.DDB.hardwire.app.SplashScreen">

    <ImageView
        android:id="@drawable/ic_launcher"
        android:layout_width="450px"
        android:layout_height="450px"
        android:src="@drawable/splash"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#454545"
        android:gravity="center_horizontal"
        android:text="HardWired"
        android:layout_alignBottom="@drawable/ic_launcher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#454545"
        android:gravity="center_horizontal"
        android:text="Powered by"
        android:id="@+id/textView"
        android:layout_above="@drawable/databaas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="300px"
        android:layout_height="300px"
        android:id="@drawable/databaas"
        android:src="@drawable/databaas"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@drawable/ic_launcher"
        android:layout_alignStart="@drawable/ic_launcher"
        android:layout_alignRight="@drawable/ic_launcher"
        android:layout_alignEnd="@drawable/ic_launcher" />

</RelativeLayout>
